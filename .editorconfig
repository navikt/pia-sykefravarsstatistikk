[*.{kt,kts}]
ij_kotlin_imports_layout = *, java.**, javax.**, kotlin.**, ^ # support for IntelliJ import alias rule (Unng√•r konflikt mellom optimize imports og ktlint)
indent_size = 4
indent_style = space
insert_final_newline = true
ktlint_code_style = ktlint_official
